<div id="edit-list-form">
  <h2>Edit this list:</h2>
  <form action="/lists/<%= @list.id %>" method="POST" id="edit-list">
    <input type="hidden" name="_method" value="PUT">
    Title: <input type="text" name="list[title]" value="<%= @list.title %>"><br>
    Edit List items here:<br>
    <% @list.items.each do |item| %>
      <input type="text" name="content" value="<%= item.content %>"><br>
    <% end %>
    <input type="hidden" name="list[user_id]" value="<%= current_user.id %>">
    <input type="submit">
  </form>

  <%= params  %>

</div>